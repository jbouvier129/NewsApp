<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings">

    <EditTextPreference
        android:defaultValue=" "
        android:inputType="text"
        android:key="@string/search_term_key"
        android:selectAllOnFocus="true"
        android:title="@string/api_search_term" />

    <ListPreference
        android:defaultValue="@string/order_by_relevance"
        android:entries="@array/order_by_labels"
        android:entryValues="@array/order_by_values"
        android:key="@string/order_by_key"
        android:title="@string/order_by_label" />

</PreferenceScreen>